<%= button_to "Discover Page", user_discover_index_path(@user), method: :get %><br>

<% if @keyword != "top%20rated" %>
    <p> Movie results for: <%= "#{@keyword}" %></p>
<% end %>

<div class="results">
    <% @movies.each do |movie| %>
        <%= link_to "#{movie[:title]}", user_movie_path(@user, movie[:id]) %>
        Vote Average: <%= "#{movie[:vote_average].round(1)}" %>
        <br>
    <% end %>
</div>